{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "babel"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "google"
  ],
  "rules": {
    "arrow-parens":  ["error", "always"],
    "require-jsdoc": ["off"],
    "new-cap": ["off"],
    "indent": ["error", 2],
    "max-len": ["off"],
    "no-invalid-this": ["off"],
    "babel/no-invalid-this": ["error"]
  }
}
